<h1>Defect Snapshot</h1>
<p>Get the defect snapshot</p>
<button id="getdatabtn" onclick="getsnapshotdata()">Get Data</button>

<div id="oscontainer" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<div id="odcontainer" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

<script type="text/javascript" >
	function getsnapshotdata() {
		$.ajax({
  				type: 'GET',
  				url:  '/getsnapshotdata',
  				data: {},
  				dataType : "json",
  				success: function (data) {
   					if (data.error) {
    					onsnapshoterror(data.error);
   					} 
   					else {
    					onsnapshotsuccess(data);
   					}
				}
			   });
	}
	
	function onsnapshoterror(error) {
	}

	function onsnapshotsuccess(data) {
        $('#oscontainer').highcharts({
            chart: {
                type: 'line',
                zoomType: 'xy'
             },
            title: {
                text: 'Total/Incoming/Outgoing Defects'
            },
            subtitle: {
				text: document.ontouchstart === undefined ?
                    'Click and drag in the plot area to zoom in' :
                    'Pinch the chart to zoom in'
            },
            xAxis: {
                categories: data.timestamps
            },
            yAxis: {
                title: {
                    text: 'Number of Defects'
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: true
                }
            },
            series: [{name: "Open", data: data.numopen}, {name: "Incoming", data: data.numin}, {name: "Outgoing", data: data.numout}]
        });

        $('#odcontainer').highcharts({
            chart: {
                type: 'line',
                zoomType: 'xy'
            },
            title: {
                text: 'Defect trend by owner'
            },
            subtitle: {
				text: document.ontouchstart === undefined ?
                    'Click and drag in the plot area to zoom in' :
                    'Pinch the chart to zoom in'
            },
            xAxis: {
                categories: data.timestamps
            },
            yAxis: {
                title: {
                    text: 'Open Defects'
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: true
                }
            },
            series: data.ownerdata
        });
	}
</script>
